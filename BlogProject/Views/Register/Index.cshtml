@model Entities.Concrete.Author
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index","Register",FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">First name</label>
                            <input type="text" class="form-control" id="validationDefault01" name="FirstName">
                            @Html.ValidationMessageFor(x=>x.FirstName,"",new {@class="text-danger"})

                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Last name</label>
                            <input type="text" class="form-control" id="validationDefault02" name="LastName">
                            @Html.ValidationMessageFor(x => x.LastName,"",new{@class="text-danger"})
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Mail</label>
                            <input type="email" class="form-control" id="password1" name="AuthorMail">
                            @Html.ValidationMessageFor(x => x.AuthorMail,"",new{@class="text-danger"})
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            <input type="password" class="form-control" id="password1" name="AuthorPassword">
                            @Html.ValidationMessageFor(x => x.AuthorPassword,"",new{@class="text-danger"})
                        </div>
                        <div class="form-group col-md-6">
                                <label for="exampleInputPassword3 mb-2">Confirm Password</label>
                                <input type="password" class="form-control" id="password2" name="PasswordAgain">
                            </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a id="btn1" href="#">By clicking Signup, I agree to your terms</a>
                    </p>
                }

            </div>
        </div>
    </div>
    <script>
        $('#btn1').click(function () {
            swal("Tüm Koşulları Kabul Etmiş Bulunmaktasınız.");
        });
    </script>
</section>
